<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkColor"
    tools:context="edu.duke.wibbfya.projectU.ProfileActivity">

    <TextView
        android:id="@+id/detail_displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="Display Project Name"
        android:textColor="@android:color/white"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/detail_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/detail_displayName"
        android:layout_marginTop="21dp"
        android:text="Brief Intro"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="28sp" />

    <Button
        android:id="@+id/detail_doc_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/detail_intro"
        android:layout_marginTop="160dp"
        android:text="Documentation" />

    <Button
        android:id="@+id/detail_development_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/detail_doc_btn"
        android:layout_marginTop="25dp"
        android:text="Software Development" />

    <Button
        android:id="@+id/detail_testing_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/detail_development_btn"
        android:layout_marginTop="25dp"
        android:text="Testing" />

</RelativeLayout>
